---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';

const isRu = Astro.currentLocale === 'ru';
const blogPath = isRu ? '/ru/blog' : '/blog';
---

<header>
	<nav>
		<h2><a href={isRu ? '/ru' : '/'}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={isRu ? '/ru' : '/'}>{isRu ? 'Главная' : 'Home'}</HeaderLink>
			<HeaderLink href={blogPath}>{isRu ? 'Статьи' : 'Blog'}</HeaderLink>
		</div>
		<div class="actions">
			<LanguageSwitcher />
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1rem 2rem;
		background: var(--bg-surface);
		backdrop-filter: var(--glass-blur);
		-webkit-backdrop-filter: var(--glass-blur);
		border-bottom: var(--glass-border);
		position: sticky;
		top: 0;
		z-index: 1000;
	}
	h2 {
		margin: 0;
		font-size: 1.5rem;
		font-family: 'Outfit', sans-serif;
		font-weight: 800;
	}
	h2 a {
		color: #fff;
		text-decoration: none;
		display: inline-block;
	}
	h2 a:hover { color: var(--accent); text-shadow: var(--glow-accent); }
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}
	.internal-links {
		display: flex;
		gap: 1.5rem;
	}
	nav a {
		padding: 0.5em 0;
		color: var(--text-secondary);
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: var(--transition);
	}
	nav a.active {
		color: var(--accent);
		border-bottom-color: var(--accent);
		text-shadow: var(--glow-accent);
	}
	nav a:hover:not(.active) {
		color: #fff;
		border-bottom-color: rgba(255, 255, 255, 0.2);
	}
	.social-links {
		display: flex;
		gap: 1rem;
	}
	.social-links a {
		color: var(--text-muted);
		transition: var(--transition);
	}
	.social-links a:hover {
		color: var(--accent);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		header { padding: 1rem; }
	}
</style>
